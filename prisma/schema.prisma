// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Settings {
  id                  String  @id
  isCustomDescription Boolean @default(false)
}

model MediaQueue {
  productId BigInt @id
  shopId    String
}

model Campaign {
  productId BigInt @id
  postDate  String
}
